[auth]
# Admin credentials
# Generate hashed password with: python -c "from src.petanque_manager.infra.auth import hash_password; print(hash_password('your_password'))"
admin_username = "admin"
admin_password = "$2b$12$KIX8qS2zqD5kqN2xqH3xL.yZxqH3xL.yZxqH3xL.yZxqH3xL.yZxqO"  # Default: "admin"

# Cookie encryption key (change this!)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
cookie_key = "your_secure_random_key_here_change_in_production"

